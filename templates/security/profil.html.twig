{% include 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">
		<head>
			<title>Hackathon - Application WEB</title>
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
		</head>
		<style>

			.card {
				border: 1px solid #dadada;
				width: 100%;
				height: auto;
				margin-top: 25px;
			}

			.card-title {
				padding: 0;
			}
		</style>
		<div class="container">
			<div class="row">
				<div class="col-4">
					<div class="card">
						<img class="card-img-top" src="https://th.bing.com/th/id/OIP.AXF8IYKqC3Y7JxYRaUrCPQHaEK?pid=ImgDet&rs=1" alt="Card image cap">
						<div class="card-body">
							<h3 class="card-title">Informations personnelles</h3>
							Prénom :<h5 class="card-title">{{ app.user.prenom }}</h5>
							Nom :<h5 class="card-title">{{ app.user.nom }}</h5>
							Mail :<h5 class="card-title">{{ app.user.mail }}</h5>
						</div>
					</div>
				</div>
				<div class="col-4">
					<div class="card">
						<img class="card-img-top" src="https://th.bing.com/th/id/OIP.AXF8IYKqC3Y7JxYRaUrCPQHaEK?pid=ImgDet&rs=1" alt="Card image cap">
						<div class="card-body">
							<h3 class="card-title">Inscription Hackathon</h3>
							{% if lesHackathons == none %}
								<h5 class="card-title" style="color:red">Vous êtes inscrit à aucun Hackathon</h5>
							{% endif %}
							{% for Hackathon in lesHackathons %}
								<h5 class="card-title">- {{ Hackathon.theme }}</h5>
							{% endfor %}
						</div>
					</div>
				</div>
				<div class="col-4">
					<div class="card">
						<img class="card-img-top" src="https://th.bing.com/th/id/OIP.AXF8IYKqC3Y7JxYRaUrCPQHaEK?pid=ImgDet&rs=1" alt="Card image cap">
						<div class="card-body">
							<h3 class="card-title">Hackathons Favoris</h3>
							{% if lesFavoris == none %}
								<h5 class="card-title" style="color:red">Vous n'avez pas de favoris</h5>
								{% endif %}
							{% for Hackathon in lesFavoris %}
							<h5 class="card-title">- {{ Hackathon.theme }}</h5>
							{% endfor %}

						</div>
					</div>
				</div>
			</div>
		</div>
		{% include 'footer.html.twig' %}

	{% endblock %}

</html>
