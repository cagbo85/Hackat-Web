{% include 'base.html.twig' %}
{% block body %}
	<div class="card" style="width: 15%;text-align:center; margin-left:42%;margin-bottom: 5%;margin-top: 5%">
		<h1 style="text-align:center;">Connexion</h1>
                {% if error %}
                    <div class="alert alert-danger">L'email ou le mot de passe est incorrect</div>
                {% endif %}
		<form action="{{ path('security_login') }}" method="post">
			<label for="username">Email:</label>
			</br>
			<input type="text" id="username" name="_username" value="{{ last_username }}"/>

			<label for="password">Mot de Passe:</label>
			<input type="password" id="password" name="_password"/>

			{# If you want to control the URL the user is redirected to on success
							        <input type="hidden" name="_target_path" value="/account"/> #}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button style="margin-top: 10%;margin-bottom:5%;" class="btn btn-primary" type="submit">Se connecter</button>
		</form>
		</div>
		</div>
	{% endblock %}
	{% include 'footer.html.twig' %}
