{% include 'base.html.twig' %}
{% block body %}
	<div class="card" style="width: 30%;text-align:center; margin-left:42%;margin-bottom: 5%;margin-top: 5%">
		<h1 style="text-align:center;">Inscription</h1>
		{{ form_start(InscriptionForm) }}
		<label for="prenom">Prénom:</label>
		{{ form_widget(InscriptionForm.Prenom)}}
		</br>
		<label for="nom">Nom:</label>
		{{ form_widget(InscriptionForm.Nom)}}
		</br>
		<label for="mail">Mail:</label>
		{{ form_widget(InscriptionForm.mail)}}
		</br>
		<label for="telephone">Téléphone:</label>
		{{ form_widget(InscriptionForm.numtel)}}
		</br>
		<label for="dateNaiss">Date de Naissance:</label>
		{{ form_widget(InscriptionForm.datenaiss)}}
		</br>
		<label for="password">URL Portfolio:</label>
		{{ form_widget(InscriptionForm.portfolio)}}
		</br>
		{{ form_widget(InscriptionForm.Password) }}
		</br>

		{# If you want to control the URL the user is redirected to on success
									        <input type="hidden" name="_target_path" value="/account"/> #}
		<button type="submit" class="btn btn-primary">S'inscrire</button>
		{{ form_end(InscriptionForm) }}
	</div>
</div>{% endblock %}{% include 'footer.html.twig' %}
